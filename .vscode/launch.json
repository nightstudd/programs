{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Запуск C++ программы (WSL)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/cout.cpp",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "setupCommands": [
        {
          "description": "Включить печать значений для gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "Скомпилировать C++"
    }
  ]
}
